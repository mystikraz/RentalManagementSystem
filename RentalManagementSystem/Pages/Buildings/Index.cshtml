@page
@model RentalManagementSystem.Pages.Buildings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Meter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].CreatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Building) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meter.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
