@page
@model RentalManagementSystem.Pages.Rents.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rent.TenantId" class="control-label"></label>
                <select asp-for="Rent.TenantId" class="form-control" asp-items="ViewBag.TenantId"></select>
                <span asp-validation-for="Rent.TenantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.Price" class="control-label"></label>
                <input asp-for="Rent.Price" class="form-control" />
                <span asp-validation-for="Rent.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.Month" class="control-label"></label>
                <input asp-for="Rent.Month" class="form-control" />
                <span asp-validation-for="Rent.Month" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Rent.Id" />
            <div class="form-group">
                <label asp-for="Rent.CreatedAt" class="control-label"></label>
                <input asp-for="Rent.CreatedAt" class="form-control" />
                <span asp-validation-for="Rent.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.UpdatedAt" class="control-label"></label>
                <input asp-for="Rent.UpdatedAt" class="form-control" />
                <span asp-validation-for="Rent.UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rent.CreatedBy" class="control-label"></label>
                <input asp-for="Rent.CreatedBy" class="form-control" />
                <span asp-validation-for="Rent.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
