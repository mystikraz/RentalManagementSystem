@model RentalManagementSystem.Pages.Rents.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rent[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent[0].Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent[0].Tenant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent[0].CreatedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenant.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
